---
import { SITE_TITLE } from "../consts";
const IG_URL = "https://instagram.com/crescentyves_";
const GITHUB_URL = "https://github.com/CrescentYves";
---

<header class="site-header">
  <div class="inner">
    <a class="brand" href="/" aria-label={SITE_TITLE}>
      <span class="brand-text">{SITE_TITLE}</span>
    </a>

    <!-- 如果你想把导航也去掉：删除下面这个 <nav>...</nav> 即可 -->
    <nav class="nav" aria-label="Primary">
      <a href="/" class="nav-link">Home</a>
      <a href="/blog" class="nav-link">Blog</a>
      <a href="/about" class="nav-link">About</a>
    </nav>

    <div class="social" aria-label="Social links">
      <a class="icon-btn" href={IG_URL} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
        <!-- Instagram SVG -->
        <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
          <path
            fill="currentColor"
            d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5zm10 2H7a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3zm-5 4.5A5.5 5.5 0 1 1 6.5 14 5.5 5.5 0 0 1 12 8.5zm0 2A3.5 3.5 0 1 0 15.5 14 3.5 3.5 0 0 0 12 10.5zM18 6.7a1.2 1.2 0 1 1-1.2 1.2A1.2 1.2 0 0 1 18 6.7z"
          />
        </svg>
      </a>

      <a class="icon-btn" href={GITHUB_URL} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
        <!-- GitHub SVG -->
        <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
          <path
            fill="currentColor"
            d="M12 2a10 10 0 0 0-3.16 19.49c.5.09.68-.22.68-.48v-1.7c-2.77.6-3.35-1.18-3.35-1.18-.45-1.15-1.1-1.46-1.1-1.46-.9-.62.07-.61.07-.61 1 .07 1.52 1.02 1.52 1.02.9 1.53 2.36 1.09 2.94.84.09-.65.35-1.09.63-1.34-2.21-.25-4.54-1.11-4.54-4.95 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02A9.56 9.56 0 0 1 12 6.84c.85 0 1.71.12 2.51.34 1.9-1.29 2.74-1.02 2.74-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.85-2.34 4.7-4.57 4.95.36.31.68.93.68 1.88v2.79c0 .27.18.58.69.48A10 10 0 0 0 12 2z"
          />
        </svg>
      </a>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.82);
    backdrop-filter: saturate(180%) blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  :global(body.dark) .site-header {
    background: rgba(12, 12, 12, 0.7);
    border-bottom-color: rgba(255, 255, 255, 0.08);
  }

  .inner {
    max-width: 980px;
    margin: 0 auto;
    padding: 14px 20px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 12px;
  }

  .brand {
    justify-self: start;
    text-decoration: none;
    color: inherit;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
    letter-spacing: 0.2px;
  }

  .brand-text {
    font-size: 16px;
  }

  .nav {
    justify-self: center;
    display: inline-flex;
    gap: 14px;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: inherit;
    opacity: 0.78;
    font-size: 14px;
    padding: 6px 8px;
    border-radius: 10px;
    transition: opacity 120ms ease, background 120ms ease;
  }

  .nav-link:hover {
    opacity: 1;
    background: rgba(0, 0, 0, 0.06);
  }

  :global(body.dark) .nav-link:hover {
    background: rgba(255, 255, 255, 0.08);
  }

  .social {
    justify-self: end;
    display: inline-flex;
    gap: 10px;
    align-items: center;
  }

  .icon-btn {
    width: 36px;
    height: 36px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    opacity: 0.78;
    transition: opacity 120ms ease, background 120ms ease;
  }

  .icon-btn:hover {
    opacity: 1;
    background: rgba(0, 0, 0, 0.06);
  }

  :global(body.dark) .icon-btn:hover {
    background: rgba(255, 255, 255, 0.08);
  }

  @media (max-width: 640px) {
    .inner {
      grid-template-columns: 1fr auto;
      grid-template-areas:
        "brand social"
        "nav nav";
    }
    .brand { grid-area: brand; }
    .social { grid-area: social; }
    .nav { grid-area: nav; justify-self: start; }
  }
</style>

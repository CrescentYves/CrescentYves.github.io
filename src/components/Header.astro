---
import { SITE_TITLE } from '../consts';
const pathname = new URL(Astro.request.url).pathname;
---

<header>
  <nav>
    <a href="/" class="logo">
      {SITE_TITLE}
    </a>

    <div class="internal-links">
      <a href="/" class={pathname === '/' ? 'active' : ''}>Home</a>
      <a href="/works" class={pathname.startsWith('/works') ? 'active' : ''}>Works</a>
      <a href="/about" class={pathname.startsWith('/about') ? 'active' : ''}>About</a>
    </div>

    <div class="social-links">
      <!-- GitHub Icon -->
      <a href="https://github.com/crescentyves" target="_blank" aria-label="GitHub">
        <svg viewBox="0 0 24 24" class="icon"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    /* 磨砂玻璃效果：浅蓝色半透明底，增强导航栏存在感 */
    background: rgba(165, 216, 255, 0.2);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border-bottom: 1px solid rgba(0, 51, 102, 0.05);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.2rem 2rem;
  }

  /* 导航文字颜色统一使用深蓝色，不再用白色 */
  a {
    color: #003366;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
  }

  .logo {
    font-size: 1.3rem;
    font-weight: 900;
    letter-spacing: -0.5px;
    color: #001E4D; /* Logo 用更深的颜色 */
  }

  .internal-links {
    display: flex;
    gap: 2.5rem;
  }

  .internal-links a:hover {
    color: #000;
    transform: translateY(-1px);
  }

  /* 激活状态：加粗 + 下方小圆点 */
  .internal-links a.active {
    color: #001E4D;
  }

  .internal-links a.active::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    background-color: #FFF100; /* 圆点用黄色，呼应 Slogan */
    border-radius: 50%;
  }

  .icon {
    width: 20px;
    height: 20px;
    fill: #003366;
    transition: fill 0.3s, transform 0.3s;
  }

  .social-links a:hover .icon {
    fill: #000;
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    nav { padding: 1rem; }
    .internal-links { gap: 1rem; }
    .logo { font-size: 1rem; }
  }
</style>
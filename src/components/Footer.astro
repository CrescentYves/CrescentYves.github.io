<style>
  .site-footer {
    padding: 36px 0 48px;
  }

  .inner {
    max-width: 980px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  .copyright {
    margin: 0 0 14px;
    opacity: 0.75;
  }

  .social {
    display: inline-flex;
    gap: 10px;
    align-items: center;
    justify-content: center;
  }

  .icon-btn {
    width: 40px;
    height: 40px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    color: inherit;
    text-decoration: none;
    opacity: 0.78;
    transition: opacity 120ms ease, background 120ms ease;
  }

  .icon-btn:hover {
    opacity: 1;
    background: rgba(0, 0, 0, 0.06);
  }

  :global(body.dark) .icon-btn:hover {
    background: rgba(255, 255, 255, 0.08);
  }
</style>

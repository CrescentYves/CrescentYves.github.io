---
// src/components/BackgroundCollage.astro
// 请把这里换成你真实的图片路径
const images = [
  '/images/work1.jpg',
  '/images/work2.jpg',
  '/images/work3.jpg',
  '/images/work4.jpg',
  '/images/work5.jpg',
  '/images/work6.jpg',
];
---

<div class="collage-wrapper">
  <div class="collage-grid">
    {images.map((img, index) => (
      <div class={`collage-item item-${index + 1}`}>
        <img src={img} alt="" loading="lazy" />
      </div>
    ))}
  </div>
</div>

<style>
  .collage-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: -2; /* 放在最最底层 */
    overflow: hidden;
    background-color: #000;
  }

  .collage-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    width: 100%;
    height: 100%;
    gap: 0; /* 既然有颜色覆盖，缝隙可以去掉，或者保留 1px */

    /* 关键：把图片变成黑白高对比度，这样上色最准 */
    filter: grayscale(100%) contrast(110%) brightness(0.9);
  }

  .collage-item {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .collage-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    animation: panImage 25s infinite alternate ease-in-out;
  }

  .item-1 img { animation-delay: 0s; }
  .item-2 img { animation-delay: -5s; }
  .item-3 img { animation-delay: -10s; }
  .item-4 img { animation-delay: -2s; }

  @keyframes panImage {
    0% { transform: scale(1.05) translate(0, 0); }
    100% { transform: scale(1.15) translate(-2%, -2%); }
  }

  @media (max-width: 768px) {
    .collage-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, 1fr);
    }
  }
</style>
---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

// 1. 接收页面传来的参数
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>

  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  /* 基础布局样式：确保 Footer 永远沉底 */
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh; /* 至少占满整个屏幕高度 */
    margin: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; /* 统一极简字体 */
    background-color: #fff;
    color: #111;
  }

  /* 如果你想让全站所有页面的内容都居中且有限宽，可以在这里统一设置 */
  main {
    flex: 1; /* 让主内容区自动撑开，把 Footer 挤下去 */
    width: 100%;
    max-width: 960px; /* 限制最大宽度，阅读体验更好 */
    margin: 0 auto;   /* 水平居中 */
    padding: 2rem 1rem; /* 给点呼吸感 */
  }

  /* 暗色模式适配 (如果你需要的话) */
  :global(.dark) body {
    background-color: #111;
    color: #fff;
  }
</style>
---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>

  <body>
    <!-- 1. HDR 光源层：顶部的激发态光斑 -->
    <div class="hdr-glow"></div>

    <!-- 2. 噪点层 (稍微减弱一点，让画面更通透) -->
    <div class="grain-overlay"></div>

    <!-- 3. 光标 -->
    <div id="custom-cursor"></div>

    <Header transition:persist />

    <main transition:animate="slide">
      <slot />
    </main>

    <Footer />

    <!-- 交互脚本：光标跟随 -->
    <script>
       function initCursor() {
          const cursor = document.getElementById('custom-cursor');
          document.addEventListener('mousemove', (e) => {
             const { clientX, clientY } = e;
             if (cursor) {
                // 简单的跟随，稍微加点延迟让它更有分量感
                cursor.animate({
                   transform: `translate(${clientX}px, ${clientY}px)`
                }, { duration: 800, fill: "forwards" });
             }
          });
       }
       document.addEventListener('astro:page-load', initCursor);
    </script>
  </body>
</html>

<style is:global>
  :root {
    /* === 你的定制色板 === */
    --c-bottom: #1366B7;     /* 底部深沉蓝 */
    --c-top-glow: #E3F2FD;   /* 顶部 HDR 高光 (接近白色的蓝) */

    /* 文字颜色：比底部更浅、更嫩的冰蓝色 */
    --c-text-main: #B3D9FF;  /* 嫩蓝 */
    --c-text-highlight: #FFFFFF; /* 高亮白 */

    --cursor-size: 20px;
    --font-serif: "Times New Roman", serif;
  }

  html {
    /* 核心背景：从顶部的亮光过渡到底部的深蓝 */
    background: linear-gradient(180deg, #8AB6F9 0%, var(--c-bottom) 70%);
    min-height: 100vh;
    color: var(--c-text-main);
    font-family: var(--font-serif);
    overflow-x: hidden;
    cursor: none; /* 隐藏默认鼠标 */
  }

  /* 恢复链接手势 */
  a, button { cursor: none; }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;
  }

  /* === HDR 光源层 === */
  /* 这是一个巨大的顶部光斑，制造“过曝”的感觉 */
  .hdr-glow {
    position: fixed;
    top: -30%;
    left: 50%;
    transform: translateX(-50%);
    width: 120vw;
    height: 80vh;
    background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(138, 182, 249, 0) 70%);
    z-index: -1;
    pointer-events: none;
    mix-blend-mode: overlay; /* 叠加模式，让光更有质感 */
  }

  /* === 噪点层 === */
  .grain-overlay {
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100%;
    pointer-events: none;
    z-index: 0;
    opacity: 0.08; /* 稍微调低，保证 HDR 通透感 */
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='1'/%3E%3C/svg%3E");
    mix-blend-mode: overlay;
  }

  /* === 光标样式 === */
  #custom-cursor {
    position: fixed;
    top: 0; left: 0;
    width: var(--cursor-size);
    height: var(--cursor-size);
    border: 1.5px solid rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    pointer-events: none;
    z-index: 9999;
    transform: translate(-50%, -50%);
    backdrop-filter: invert(1); /* 遇到亮背景变黑，遇到暗背景变白 */
    transition: width 0.3s, height 0.3s;
  }
</style>
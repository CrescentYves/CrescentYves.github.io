---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackgroundCollage from '../components/BackgroundCollage.astro';
import { ViewTransitions } from 'astro:transitions';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>

  <body>
    <BackgroundCollage />
    <div class="color-grade-overlay"></div>
    <div class="grain-overlay"></div>
    <div id="custom-cursor"></div>

    <Header transition:persist />
    <main transition:animate="fade">
      <slot />
    </main>
    <Footer />

    <script>
      /* 封装光标初始化逻辑 */
      const initCursor = () => {
        const cursor = document.getElementById('custom-cursor');
        if (!cursor) return;

        window.addEventListener('mousemove', (e) => {
          cursor.style.transform = `translate(${e.clientX}px, ${e.clientY}px)`;
        });
      };

      /* 监听 Astro 页面加载 */
      document.addEventListener('astro:page-load', initCursor);
    </script>
  </body>
</html>

<style is:global>
  :root {
    --c-bottom: #1366B7;
    --c-top: #A5D8FF;
    --c-ice-blue: #B3D9FF;
    --c-nav-text: #003366;
    --font-serif: "Times New Roman", serif;
  }

  html {
    background-color: #1366B7;
    min-height: 100vh;
    font-family: "Times New Roman", serif;
    cursor: none;
    overflow-x: hidden;
  }

  body {
    margin: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .color-grade-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    background: linear-gradient(
      to bottom,
      rgba(165, 216, 255, 0.4) 0%,
      rgba(19, 102, 183, 0.7) 45%,
      #1366B7 100%
    );
    mix-blend-mode: multiply;
  }

  .grain-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0.18;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='1'/%3E%3C/svg%3E");
    mix-blend-mode: soft-light;
    pointer-events: none;
  }

  #custom-cursor {
    position: fixed;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    border: 2px solid #ffffff;
    border-radius: 50%;
    z-index: 9999;
    transform: translate(-50%, -50%);
    pointer-events: none;
    mix-blend-mode: difference;
    transition: width 0.3s, height 0.3s;
  }

  main {
    flex: 1;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 10;
    box-sizing: border-box;
  }

  a, button {
    cursor: none;
  }
</style>
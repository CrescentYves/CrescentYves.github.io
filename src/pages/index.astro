---
import BaseLayout from '../layouts/Baselayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>

  <div class="hero-container">
    <h1 class="slogan">The Lust for life<br />keeps us alive</h1>
    <p class="subtitle">This is crescentyves</p>
  </div>

</BaseLayout>

<style>
  /* 这里只需要写首页特有的样式，Header 和 Footer 不用管了 */
  .hero-container {
    text-align: center;
    padding-top: 15vh; /* 调整垂直位置 */
  }

  .slogan {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.5rem;
    font-weight: 300;
    color: #666;
  }
</style>
---
import BaseLayout from '../layouts/Baselayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>

  <div class="hero-container">
    <div class="content-wrapper">
      <h1 class="hero-title" id="hero-title">
        <span class="line line-1">The Lust for life</span>
        <span class="line line-2">keeps us alive</span>
      </h1>
      <p class="subtitle">This is crescentyves</p>
    </div>
  </div>

</BaseLayout>

<script>
  // 添加鼠标移动视差效果 (Parallax Tilt)
  const hero = document.getElementById('hero-title');

  if (hero) {
    document.addEventListener('mousemove', (e) => {
      const { clientX, clientY } = e;
      const { innerWidth, innerHeight } = window;

      // 计算鼠标距离中心的偏移量 (-1 到 1)
      const x = (clientX - innerWidth / 2) / innerWidth;
      const y = (clientY - innerHeight / 2) / innerHeight;

      // 稍微移动文字，制造空间感
      hero.style.transform = `
        perspective(1000px)
        rotateY(${x * 10}deg)
        rotateX(${-y * 10}deg)
        translateZ(20px)
      `;
    });
  }
</script>

<style>
  /* 1. 容器布局：垂直居中 */
  .hero-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 80vh; /* 占据大部分屏幕 */
    perspective: 1000px; /* 为 3D 效果做准备 */
  }

  /* 2. 主标题样式 */
  .hero-title {
    font-family: "Times New Roman", serif; /* 强制衬线体 */
    font-size: clamp(3rem, 8vw, 7rem); /* 响应式巨型字体 */
    font-weight: 700;
    line-height: 1.05;
    text-align: center;
    margin: 0;

    /* 让文字平滑过渡 */
    transition: transform 0.1s ease-out;
    transform-style: preserve-3d;
  }

  /* 3. 文字行通用动画 */
  .line {
    display: block;
    opacity: 0; /* 初始不可见 */
    filter: blur(20px); /* 初始模糊 */
    transform: translateY(40px) scale(1.1); /* 初始下沉并放大 */

    /* 执行动画 */
    animation: cinematic-reveal 1.8s cubic-bezier(0.19, 1, 0.22, 1) forwards;
  }

  /* 4. 第一行样式 */
  .line-1 {
    color: #f0f0f0;
    mix-blend-mode: overlay; /* 叠加模式，让白色稍微透出一点背景蓝 */
  }

  /* 5. 第二行样式 (重点) */
  .line-2 {
    color: #ffe600; /* 海报黄 */
    font-style: italic; /* 斜体 */
    animation-delay: 0.25s; /* 比第一行晚一点出来 */
    position: relative;
    z-index: 10;
  }

  /* 6. 副标题样式 */
  .subtitle {
    margin-top: 2.5rem;
    font-size: 1rem;
    font-weight: 400;
    letter-spacing: 0.2em; /* 增加字间距，显得高级 */
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.6); /* 半透明白，不要用灰 */
    text-align: center;

    opacity: 0;
    animation: fade-in 1.5s ease-out 1s forwards; /* 延迟 1s 出现 */
  }

  /* === 关键帧动画 === */

  /* 电影感显影动画 */
  @keyframes cinematic-reveal {
    0% {
      opacity: 0;
      filter: blur(20px);
      transform: translateY(40px) scale(1.1);
    }
    100% {
      opacity: 1;
      filter: blur(0);
      transform: translateY(0) scale(1);
    }
  }

  /* 简单淡入 */
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* 移动端适配 */
  @media (max-width: 768px) {
    .hero-container {
      padding-top: 10vh;
    }
    .hero-title {
      font-size: 3.5rem; /* 手机上稍微小一点 */
    }
  }
</style>